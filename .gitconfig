[user]
	name = Brandon Siegel
	email = brandon@smartercode.net
	signingkey = 3D6E8B65
[color]
	ui = auto
[alias]
  d = diff --word-diff
  lg = log --color --oneline
  co = checkout
  mb = merge --no-ff --edit
  stop-packing = gc --prune=now
  pancake = !git fetch && git reset --hard $(git rev-parse --abbrev-ref --symbolic-full-name @{u})
  upcake = !git fetch upstream && git reset --hard upstream/$(git rev-parse --abbrev-ref --symbolic-full-name HEAD)
[push]
  default = upstream
[pull]
  rebase = true
[rebase]
	autosquash = true
	autostash = true
[diff]
	algorithm = patience
	tool = kdiff3
	compactionHeuristic = true
[merge]
	tool = kdiff3
[difftool]
	prompt = false
[mergetool]
	prompt = false
	keepBackup = false
[difftool "kdiff3"]
	path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
[mergetool "kdiff3"]
	path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
[difftool "sourcetree"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
[pager]
	log = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
	show = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
	diff = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
	whatchanged = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
[interactive]
	diffFilter = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight
[core]
	excludesfile = /Users/brsiegel/.gitignore_global
[hub]
	protocol = ssh
[checkout]
	defaultRemote = origin
